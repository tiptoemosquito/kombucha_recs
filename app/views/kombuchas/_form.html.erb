<%= form_for(@kombucha) do |f| %>
    <div class="form-group">
    <%= f.label :brand, "Brand Name:"%>
    <%= f.text_field :brand, class: "form-control" %><br>
    </div>
    <div class="form-group">
    <%= f.label :ounces, "Fl Oz:" %>
    <%= f.number_field :ounces, class: "form-control" %><br>
    </div>
    <div class="form-group">
    <%= f.label :alcohol, "Alcohol:" %>
    <%= f.check_box :alcohol %><br>
    </div>
    <div class="form-group">
    <%= f.label :flavor, "Flavor:"%>
    <%= f.collection_select(:flavor_id, Flavor.all, :id, :name, prompt: "Choose Flavor") %>
    </div>
    <%= f.fields_for :flavor, Flavor.new do |kombucha_flavor| %>
        <div class="form-group">
        <%= kombucha_flavor.label "New Flavor:"%>
        <br>
        <%= kombucha_flavor.text_field :name, class: "form-control" %>
        </div>
    <% end%>
    <%= f.submit class: "btn btn-info"%>
<% end %>