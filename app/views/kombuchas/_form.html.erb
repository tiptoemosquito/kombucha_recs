<%= form_for(@kombucha) do |f| %>
    <%= f.label :brand_name %><br>
    <br>
    <%= f.text_field :brand_name %><br>
    <br>
    <%= f.label :size, "Size" %><br>
    <br>
    <%= f.number_field :size %><br>
    <br>
    <%= f.label :low_calorie, "Low calorie?" %><br>
    <br>
    <%= f.check_box :low_calorie %><br>
    <br>
    <%= f.label :flavor %><br>
    <br>
    <%= f.collection_select(:flavor_id, Flavor.all, :id, :name, prompt: "Choose a flavor from below.") %><br>
    <br>
    <%= f.fields_for :flavor, Flavor.new do |kombucha_flavor| %><br>
    <%= kombucha_flavor.label "Create a new flavor here:"%><br>
    <br>
    <%= kombucha_flavor.text_field :name %>
    <% end%>
    <br><br><br>
    <%= f.submit class: "btn btn-primary" %>
<% end %>