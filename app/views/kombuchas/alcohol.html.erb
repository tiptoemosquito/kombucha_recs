<hr class="my-4">
<div class="container">
    <h2 class="font-weight-lighter">Alcoholic Kombuchas</h2>
    <br>
    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-light">
            <tr>
                <th>Brand</th>
                <th>Flavor</th>
                <th>Alcohol</th>
            </tr>
        </thead>

        <tbody>
            <% @kombuchas.each do |kombucha| %>
                <tr>
                    <td><%= link_to kombucha.brand, kombucha %></td>
                    <td><%= kombucha.flavor.name %></td>
                    <td><%= kombucha.alcohol %></td>                    
                </tr>
                <br>
            <% end %>
        </tbody>
    </table><br>
    <%= link_to 'Back', kombuchas_path, class: "btn btn-warning text-white" %>
</div>
<hr class="my-4">